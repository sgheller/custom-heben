<?xml version="1.0" encoding="utf-8"?>
<templates id="template" inherit_id="point_of_sale.template">
	<t t-name="SellersPopupWidget">
	    <div role="dialog" class="modal-dialog">
			<div class="popup">
				<p class="title">Select a seller</p>
				<div class="body">
					<span>Aca van los vendedores seleccionados!</span>
					<!-- <select class="seller" id="selectPopupSellers" name="seller"></select> -->
					
                    <div class='subwindow-container'>
                        <div class='subwindow-container-fix touch-scrollable scrollable-y'>
                            <table class='seller-list'>
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Phone</th>
                                    </tr>
                                </thead>
                                <tbody class='seller-list-contents'>
                                </tbody>
                            </table>
                        </div>
                    </div>
				</div>
			</div>
	    </div>
	  </t>
</templates>

