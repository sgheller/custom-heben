<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_sku_form" model="ir.ui.view">
        <field name="name">product.sku.form</field>
        <field name="model">product.sku</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="family_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="partner_id" options="{'no_open':True,'no_create':True}" />
                            <field name="separator" options="{'no_open':True,'no_create':True}" />
                            <field name="product_id" options="{'no_open':True,'no_create':True}" />
                        </group>
                        <group>
                            <field name="season_id" options="{'no_open':True,'no_create':True}" />
                            <field name="material_id" options="{'no_open':True,'no_create':True}" />
                            <label for ="color_id" options="{'no_open':True,'no_create':True}" />
                            <div style="display: grid; grid-template-columns: 1fr 0.5fr; align-items: center;">
                                <field name="color_id" class="oe_inline" options="{'no_open':True,'no_create':True}"/>
                                <field name="color_view" widget="color" class="oe_inline" />
                            </div>
                            <field name="size_id" options="{'no_open':True,'no_create':True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="sku" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_sku_tree" model="ir.ui.view">
        <field name="name">product.sku.tree</field>
        <field name="model">product.sku</field>
        <field name="arch" type="xml">
            <tree string="product.sku">
                <field name="name" />
                <field name="sku" />
            </tree>
        </field>
    </record>

    <record id="action_product_sku" model="ir.actions.act_window">
        <field name="name">SKU</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.sku</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
    name="SKU"
    id="menu_product_sku_inventory"
    action="action_product_sku"
    parent="stock.menu_product_in_config_stock"
    />

</odoo>
